{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "resources/**",
            "use": "@vercel/static"
        },
        {
            "src": "products.json",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/products.json",
            "dest": "/products.json"
        },
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/admin",
            "dest": "public/admin.html"
        },
        {
            "src": "/about",
            "dest": "resources/about.html"
        },
        {
            "src": "/(.*)",
            "dest": "public/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
} 